<script>
    // A Key que você definiu
    const KEY_CORRETA = "Andrew2";

    function verificarLogin() {
        const input = document.getElementById('userKey').value;

        if (input === KEY_CORRETA) {
            // Se a Key estiver certa, libera o menu
            document.getElementById('login-screen').style.display = 'none';
            document.getElementById('menu-functions').style.display = 'block';
            document.getElementById('panel-title').innerText = "ANDREW MENU";
        } else {
            alert("Acesso Negado! Key incorreta.");
        }
    }

    function enviarParaAndroid() {
        const config = {
            aim: document.getElementById('aim').checked,
            wall: document.getElementById('wall').checked,
            line: document.getElementById('line').checked,
            hp: document.getElementById('hp').checked,
            color: document.getElementById('espColor').value
        };

        // Envia o JSON para o seu código Java/C++
        if (window.AndroidBridge) {
            window.AndroidBridge.enviarConfig(JSON.stringify(config));
            alert("Comandos enviados para o jogo!");
        } else {
            alert("Erro: Ponte Android não encontrada. Verifique o WebView.");
        }
    }
</script>

